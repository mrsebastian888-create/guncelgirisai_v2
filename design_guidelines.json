{
  "identity": {
    "name": "Dynamic Sports & Bonus Network",
    "persona": "E1: The Anti-AI Designer",
    "tone": "Electric, Authoritative, High-Octane, Premium",
    "target_audience": "Turkish sports betting enthusiasts and bonus hunters",
    "language": "tr-TR"
  },
  "typography": {
    "font_family": {
      "headings": "Barlow Condensed, sans-serif",
      "body": "Inter, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "scale": {
      "h1": "text-6xl md:text-8xl font-black tracking-tighter uppercase leading-none",
      "h2": "text-4xl md:text-5xl font-bold tracking-tight uppercase",
      "h3": "text-2xl md:text-3xl font-bold tracking-tight uppercase",
      "body_lg": "text-lg md:text-xl font-medium leading-relaxed",
      "body_sm": "text-sm font-medium opacity-80"
    },
    "rules": [
      "Headings must ALWAYS be uppercase to convey authority.",
      "Use 'tracking-tighter' on all headings greater than 32px.",
      "Never use pure white (#FFFFFF) for body text; use #E0E0E0 for better readability on dark backgrounds."
    ]
  },
  "colors": {
    "palette": {
      "background": {
        "primary": "#050505",
        "secondary": "#0A0A0A",
        "card": "#121212",
        "overlay": "rgba(5, 5, 5, 0.8)"
      },
      "brand": {
        "neon_green": "#39FF14",
        "cyber_blue": "#00F0FF",
        "hot_pink": "#FF00FF",
        "electric_purple": "#7B2CBF"
      },
      "text": {
        "primary": "#EDEDED",
        "secondary": "#A1A1AA",
        "muted": "#52525B",
        "inverted": "#000000"
      },
      "status": {
        "success": "#39FF14",
        "warning": "#F59E0B",
        "error": "#FF3B30",
        "info": "#00F0FF"
      }
    },
    "gradients": {
      "hero_glow": "radial-gradient(circle at center, rgba(57, 255, 20, 0.15) 0%, rgba(5, 5, 5, 0) 70%)",
      "card_surface": "linear-gradient(145deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.01) 100%)",
      "bonus_shine": "linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent)"
    }
  },
  "visual_enhancers": {
    "borders": {
      "glass": "border border-white/10",
      "active": "border border-neon-green/50 box-shadow-[0_0_15px_rgba(57,255,20,0.3)]",
      "tracing_beam": "relative overflow-hidden before:absolute before:inset-0 before:p-[1px] before:bg-gradient-to-r before:from-transparent before:via-neon-green before:to-transparent before:animate-border-flow"
    },
    "shadows": {
      "glow": "0 0 20px rgba(57, 255, 20, 0.15)",
      "card": "0 10px 30px -10px rgba(0,0,0,0.5)"
    },
    "effects": {
      "glassmorphism": "backdrop-blur-xl bg-black/40 border border-white/5",
      "noise": "url('/assets/noise.png') opacity-5 mix-blend-overlay pointer-events-none"
    }
  },
  "layout_strategies": {
    "grid_system": {
      "news_bento": "grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[300px]",
      "bonus_list": "flex flex-col gap-4 max-w-4xl mx-auto"
    },
    "spacing": {
      "section_gap": "py-24 md:py-32",
      "container_padding": "px-6 md:px-12",
      "card_padding": "p-6 md:p-8"
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-neon-green text-black font-bold uppercase tracking-wide hover:bg-neon-green/90 hover:scale-105 transition-all shadow-[0_0_15px_rgba(57,255,20,0.4)]",
      "secondary": "bg-transparent border border-white/20 text-white font-bold uppercase hover:bg-white/10 transition-all",
      "ghost": "text-gray-400 hover:text-white transition-colors"
    },
    "cards": {
      "bonus": "relative group bg-card border border-white/5 hover:border-neon-green/30 transition-all duration-300 rounded-xl overflow-hidden",
      "news": "relative h-full w-full rounded-xl overflow-hidden group"
    },
    "navigation": {
      "navbar": "fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5 h-16 flex items-center justify-between px-6",
      "mobile_menu": "fixed inset-0 z-40 bg-black flex flex-col items-center justify-center gap-8"
    }
  },
